#include <stdlib.h>
#include <stdio.h>
#include "tokenizer.h"
#include "history.h"

#define MAX_STR_LENGTH 100
int main() {
  char str[MAX_STR_LENGTH];
  int id;
  char *token;
  List *history = init_history();
  
  printf("Hello, welcome to the tokenizer.\n");
  
  while(1) {
    printf("Enter a 't' if you would like to tokenize a sentence");
    printf("> ");
    
    if(fgets(str, 100, stdin) != NULL) {
      if (str[0] == 'e') {
	break;
      }
      printf("You entered: %s\n", str);
    }
    else {
      break;
    }
  }

  printf("Program exited.\n");
  return 0;
}
